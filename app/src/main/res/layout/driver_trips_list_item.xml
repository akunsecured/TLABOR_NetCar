<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:weightSum="12">

    <ImageView
        android:id="@+id/ivDriverCarImage"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder"
        android:layout_weight="3"
        android:layout_width="0dp" />

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="8dp"
        android:layout_weight="8"
        android:weightSum="2"
        android:layout_width="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teszt Driver"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvDriverStartDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="2020.12.01."
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDriverCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Credits"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvDriverEndDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:text="2020.12.02."
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:weightSum="2"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibTripAccept"
            android:src="@drawable/placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ibTripDecline"
            android:src="@drawable/placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>