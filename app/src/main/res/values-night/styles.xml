<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_black</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_down</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3A559F</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#9C9C9C
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3A559F</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#3A559F</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#3A559F
        </item>
    </style>
</resources>